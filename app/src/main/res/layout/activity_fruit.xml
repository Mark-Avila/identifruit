<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FruitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/fruitActImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/fruit_image"
            android:elevation="8dp"
            android:outlineProvider="bounds"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/fruitActTagalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingHorizontal="18dp"
            android:layout_marginTop="12dp"
            android:text="Mansanas"
            android:textColor="#F55454"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fruitActEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:paddingHorizontal="18dp"
            android:text="Apple"
            android:textColor="#9C9C9C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fruitActDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:paddingHorizontal="24dp"
                android:textColor="#9C9C9C"
                android:paddingVertical="12dp"
                android:justificationMode="inter_word"
                android:text="@string/dummy_text"/>

        </ScrollView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>